# menu.lst
default 0
timeout 10 
title opencocon
	root    (hd0,0)
	kernel  /bzImage root=/dev/sda2 ro

title opencocon Force Framebuffer (1024x768@24bit)
	root	(hd0,0)
	kernel	/bzImage root=/dev/sda2 ro vga=0x318 forcefb

title opencocon Force Framebuffer (1024x768@16bit)
	root	(hd0,0)
	kernel	/bzImage root=/dev/sda2 ro vga=0x317 forcefb

title opencocon Force Framebuffer (800x600@24bit)
        root    (hd0,0)
        kernel  /bzImage root=/dev/sda2 ro vga=0x315 forcefb

title opencocon Force Framebuffer (800x600@16bit)
        root    (hd0,0)
        kernel  /bzImage root=/dev/sda2 ro vga=0x314 forcefb

title opencocon Force Framebuffer (640x480@16bit)
        root    (hd0,0)
        kernel  /bzImage root=/dev/sda2 ro vga=0x311 forcefb  

title   opencocon (sda1, legacy HDD install method)
        root    (hd0,0)
        kernel  /boot/bzImage root=/dev/sda1 ro

